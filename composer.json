{
    "name": "leocavalcante/siler",
    "type": "library",
    "description": "Keep it simple, stupid",
    "keywords": ["framework","micro","api","router"],
    "license": "MIT",
    "authors": [
        {
            "name": "leocavalcante",
            "email": "lc@leocavalcante.com"
        }
    ],
    "require": {
        "php": ">=5.6.0"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "vlucas/phpdotenv": "^2.4",
        "phpunit/phpunit": "^5.7",
        "phpunit/php-code-coverage": "^4.0",
        "twig/twig": "^1.28",
        "squizlabs/php_codesniffer": "^2.7",
        "phpstan/phpstan": "^0.6"
    },
    "autoload": {
        "files": [
            "src/Siler.php",
            "src/Container/Container.php",
            "src/Http/Http.php",
            "src/Http/Request.php",
            "src/Http/Response.php",
            "src/Route/Route.php",
            "src/Dotenv/Dotenv.php",
            "src/Twig/Twig.php"
        ]
    },
    "autoload-dev": {
        "files": [
            "tests/SilerTest.php",
            "tests/Container/ContainerTest.php",
            "tests/Http/HttpTest.php",
            "tests/Http/RequestTest.php",
            "tests/Http/ResponseTest.php",
            "tests/Route/RouteTest.php",
            "tests/Route/RouteFacadesTest.php",
            "tests/Dotenv/DotenvTest.php",
            "tests/Twig/TwigTest.php"
        ]
    },
    "scripts": {
        "unit": "phpunit",
        "lint": "phpcs",
        "fix": "phpcbf",
        "doc": "phpdoc run -d src -t docs",
        "stan": "phpstan analyse -l 4 -c phpstan.neon src tests",
        "test": [
            "@composer lint",
            "@composer unit"
        ],
        "test-doc": [
            "@composer test",
            "@composer doc"
        ]
    }
}
